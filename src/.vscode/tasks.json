                "-lopencv_superres",
                "-lopencv_stitching",
                "-lopencv_objdetect",
                "-lopencv_ml",
                "-lopencv_shape",
                "-lopencv_viz",
                "-lopencv_videostab",
                "-lopencv_calib3d",
                "-lopencv_features2d",
                "-lopencv_video",
                "-lopencv_flann",
                "-lopencv_photo",
                "-lopencv_highgui",
                "-lopencv_videoio",
                "-lopencv_imgcodecs",
                "-lopencv_imgproc",
                 "-lopencv_core"
